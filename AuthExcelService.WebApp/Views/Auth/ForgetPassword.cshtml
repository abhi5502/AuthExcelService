@using AuthExcelService.WebApp.Models.Auth
@model ForgetPasswordViewModel

@{
    ViewData["Title"] = "ForgetPassword";
}

<h2>Forgot Password</h2>

<form asp-action="ForgetPassword" method="post">
    <div class="form-group">
        <label for="Email">Email Address</label>
        <input type="email" class="form-control" id="Email" name="Email" asp-for="Email" required />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary mt-3">Send Reset Link</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}